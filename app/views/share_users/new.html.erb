<h1>Searched user to share "<%= @list.subject %>" list.</h1>
<%= @user.username %>

<%= form_for :share_user, url: { action: "create" }, method: :post do |f| %>
    <%= f.hidden_field :list_id, {value: @list.id} %>
    <%= f.hidden_field :user_id, {value: @user.id} %>
    <%= f.hidden_field :username, {value: @user.username} %>
    <%= f.label :note %>
    <%= f.text_field :note %>
    <%= f.submit "Add user to share" %>
<% end %>

<%= button_to "Back to search page", list_user_search_path(@list.id), method: :get %>